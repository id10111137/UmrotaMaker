<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/id_img_dcompany"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:contentDescription="TODO" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/id_subject_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Umroh Sukses January" />

        <TextView
            android:id="@+id/id_name_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pt.ganda wijaya" />

        <TextView
            android:id="@+id/id_Ddepart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berangkat : 2019/01/01" />

        <TextView
            android:id="@+id/id_Darrival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berangkat : 2019/01/20" />

        <TextView
            android:id="@+id/id_qty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Jumlah Keberangkatan 100 orang" />

        <TextView
            android:id="@+id/id_booking"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sisa Kursi 30 Kursi" />


    </LinearLayout>


</LinearLayout>