<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingTop="1dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/idCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:elevation="7dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="6dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="@dimen/m_5dp">


            <ImageView
                android:id="@+id/id_img_home"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="@dimen/m_5dp"
                android:src="@drawable/bg_promo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/id_hotel"
                            android:layout_width="@dimen/m_20dp"
                            app:materialIconColor="@color/colorAccent"
                            android:layout_height="@dimen/m_20dp"
                            android:layout_marginRight="@dimen/m_10dp"
                            android:scaleType="center"
                            app:materialIcon="presentation"
                            app:materialIconSize="@dimen/m_30dp" />

                        <TextView
                            android:id="@+id/id_nilai_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Rp. 0"
                            android:textColor="@color/colorAccent" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">


                        <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/id_work"
                            android:layout_width="@dimen/m_20dp"

                            app:materialIconColor="@color/colorAccent"
                            android:layout_height="@dimen/m_20dp"
                            android:layout_marginRight="@dimen/m_10dp"
                            android:scaleType="center"
                            app:materialIcon="account_multiple_plus"
                            app:materialIconSize="@dimen/m_30dp" />

                        <TextView
                            android:id="@+id/id_perusahaan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pt.Ganda Wijaya"
                            android:textColor="@color/colorAccent" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal">


                    <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/id_date"
                        android:layout_width="@dimen/m_20dp"
                        android:layout_height="@dimen/m_20dp"
                        android:layout_marginRight="@dimen/m_10dp"
                        android:scaleType="center"

                        app:materialIconColor="@color/colorAccent"
                        app:materialIcon="timer"
                        app:materialIconSize="@dimen/m_20dp" />

                    <TextView
                        android:id="@+id/id_keberangkatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-10-02"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/id_price"
                            android:layout_width="@dimen/m_20dp"
                            android:layout_height="@dimen/m_20dp"
                            android:layout_marginRight="@dimen/m_10dp"
                            app:materialIconColor="@color/colorAccent"
                            android:scaleType="center"
                            app:materialIcon="receipt"
                            app:materialIconSize="@dimen/m_20dp" />

                        <TextView
                            android:id="@+id/id_harga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 0"
                            android:textColor="@color/colorAccent" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/id_goRegister"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:background="@drawable/bottom_signup"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Detail"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/m_15dp" />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>