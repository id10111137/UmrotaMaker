<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSnow"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/id_img_umroh"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_home" />


    <TextView
        android:id="@+id/id_nama_perusahaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Wellcome to Pt. Ganda Wijaya Group" />

    <TextView
        android:id="@+id/id_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gegegrkalong Tonggoh" />

    <TextView
        android:id="@+id/id_layanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Umroh dan Hajji" />

    <TextView
        android:id="@+id/id_penerbangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 500/Month" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/m_10dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/m_5dp"
            android:src="@drawable/ic_address"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_agent"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/m_5dp"
            android:src="@drawable/ic_shoping"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/m_5dp"
            android:src="@drawable/ic_airplane"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/m_5dp"
            android:src="@drawable/ic_menu_gallery"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

    </LinearLayout>


</LinearLayout>