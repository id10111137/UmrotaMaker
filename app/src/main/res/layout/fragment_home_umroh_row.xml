<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingTop="1dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/idCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:elevation="7dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="6dp"
        app:cardPreventCornerOverlap="false">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="@dimen/m_5dp">


            <ImageView
                android:id="@+id/id_img_umroh"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/bg_promo" />

            <TextView
                android:id="@+id/id_nama_perusahaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Selamat Datang Di Pt. Ganda Wijaya Group"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat : Gegerkalong Tonggoh"
                android:textColor="@color/colorAccent"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/id_layanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layanan Travel : Umroh Dan Hajji"
                android:textColor="@color/colorAccent"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/id_penerbangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Keberangkatan : 500/Month"
                android:textColor="@color/colorAccent"
                android:textSize="12dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="@dimen/m_10dp">

                <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/id_hotel"
                    android:layout_width="@dimen/m_30dp"
                    android:layout_height="@dimen/m_30dp"
                    android:layout_marginRight="@dimen/m_10dp"
                    android:scaleType="center"
                    app:materialIcon="hotel"
                    app:materialIconColor="@color/colorAccent"
                    app:materialIconSize="@dimen/m_30dp" />

                <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/id_flight"
                    android:layout_width="@dimen/m_30dp"
                    android:layout_height="@dimen/m_30dp"
                    android:layout_marginRight="@dimen/m_10dp"
                    android:scaleType="center"
                    app:materialIcon="airplane_takeoff"
                    app:materialIconColor="@color/colorAccent"
                    app:materialIconSize="@dimen/m_30dp" />

                <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/id_travel"
                    android:layout_width="@dimen/m_30dp"
                    android:layout_height="@dimen/m_30dp"
                    android:layout_marginRight="@dimen/m_10dp"
                    android:scaleType="center"
                    app:materialIcon="wallet_travel"
                    app:materialIconColor="@color/colorAccent"
                    app:materialIconSize="@dimen/m_30dp" />

                <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/id_food"
                    android:layout_width="@dimen/m_30dp"
                    android:layout_height="@dimen/m_30dp"
                    android:layout_marginRight="@dimen/m_10dp"
                    android:scaleType="center"
                    app:materialIcon="food_variant"
                    app:materialIconColor="@color/colorAccent"
                    app:materialIconSize="@dimen/m_30dp" />

                <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/id_guiden"
                    android:layout_width="@dimen/m_30dp"
                    android:layout_height="@dimen/m_30dp"
                    android:layout_marginRight="@dimen/m_10dp"
                    android:scaleType="center"
                    app:materialIcon="account_box"
                    app:materialIconColor="@color/colorAccent"
                    app:materialIconSize="@dimen/m_30dp" />

                <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/id_agent"
                    android:layout_width="@dimen/m_30dp"
                    android:layout_height="@dimen/m_30dp"
                    android:layout_marginRight="@dimen/m_10dp"
                    android:scaleType="center"
                    app:materialIcon="store"
                    app:materialIconColor="@color/colorAccent"
                    app:materialIconSize="@dimen/m_30dp" />


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>