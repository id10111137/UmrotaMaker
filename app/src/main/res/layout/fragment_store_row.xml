<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/id_image_store"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/id_nama_toko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toko Bandung Jaya"
        android:textSize="@dimen/m_15dp" />

    <TextView
        android:id="@+id/id_store_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat : Jl. Kebon Waru Kabupaten Bandung No 13" />

    <TextView
        android:id="@+id/id_store_jam_oprasional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jam Oprasional : Buka Jam 08:00 - 20:00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/m_10dp">

        <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/id_hotel"
            android:layout_width="@dimen/m_30dp"
            android:layout_height="@dimen/m_30dp"
            android:layout_marginRight="@dimen/m_10dp"
            android:scaleType="center"
            app:materialIcon="hotel"
            app:materialIconColor="@color/colorAccent"
            app:materialIconSize="@dimen/m_30dp" />

        <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/id_flight"
            android:layout_width="@dimen/m_30dp"
            android:layout_height="@dimen/m_30dp"
            android:layout_marginRight="@dimen/m_10dp"
            android:scaleType="center"
            app:materialIcon="airplane_takeoff"
            app:materialIconColor="@color/colorAccent"
            app:materialIconSize="@dimen/m_30dp" />

        <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/id_travel"
            android:layout_width="@dimen/m_30dp"
            android:layout_height="@dimen/m_30dp"
            android:layout_marginRight="@dimen/m_10dp"
            android:scaleType="center"
            app:materialIcon="wallet_travel"
            app:materialIconColor="@color/colorAccent"
            app:materialIconSize="@dimen/m_30dp" />

        <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/id_food"
            android:layout_width="@dimen/m_30dp"
            android:layout_height="@dimen/m_30dp"
            android:layout_marginRight="@dimen/m_10dp"
            android:scaleType="center"
            app:materialIcon="food_variant"
            app:materialIconColor="@color/colorAccent"
            app:materialIconSize="@dimen/m_30dp" />

        <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/id_guiden"
            android:layout_width="@dimen/m_30dp"
            android:layout_height="@dimen/m_30dp"
            android:layout_marginRight="@dimen/m_10dp"
            android:scaleType="center"
            app:materialIcon="account_box"
            app:materialIconColor="@color/colorAccent"
            app:materialIconSize="@dimen/m_30dp" />

        <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/id_agent"
            android:layout_width="@dimen/m_30dp"
            android:layout_height="@dimen/m_30dp"
            android:layout_marginRight="@dimen/m_10dp"
            android:scaleType="center"
            app:materialIcon="store"
            app:materialIconColor="@color/colorAccent"
            app:materialIconSize="@dimen/m_30dp" />


    </LinearLayout>

</LinearLayout>