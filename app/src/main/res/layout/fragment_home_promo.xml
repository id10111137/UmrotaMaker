<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/m_10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/colorSnow"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Keberangkatan"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/colorSnow"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Kedatangan"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/m_10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ln_keberangkatan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@drawable/bottom_form"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_keberangkatan_dates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="29-Jan-2018"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/m_40dp"
                android:layout_height="@dimen/m_35dp"
                android:scaleType="center"
                app:materialIcon="calendar_range"
                app:materialIconColor="@color/colorAccent"
                app:materialIconSize="@dimen/m_40dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_kedatangan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/bottom_form"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/id_kedatangan_dates"
                    android:text="10-Febuary-2018"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/m_40dp"
                android:layout_height="@dimen/m_35dp"
                android:scaleType="center"
                app:materialIcon="calendar"
                app:materialIconColor="@color/colorAccent"
                app:materialIconSize="@dimen/m_40dp" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/id_lv_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:divider="#00000000"
        android:dividerHeight="10dp"
        android:focusableInTouchMode="false" />


</LinearLayout>