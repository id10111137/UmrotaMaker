<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/m_10dp">


    <EditText
        android:id="@+id/id_cari_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/m_10dp"
        android:background="@drawable/edt_form"
        android:drawableRight="@drawable/ic_search"
        android:hint="Cari Discount" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/m_5dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@drawable/bottom_form"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Keberangkatan"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="29-Jan-2018"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/m_35dp"
                android:layout_height="@dimen/m_35dp"
                android:src="@drawable/ic_calendar" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/bottom_form"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Kedatangan"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10-Febuary-2018"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/m_35dp"
                android:layout_height="@dimen/m_35dp"
                android:src="@drawable/ic_calendar" />

        </LinearLayout>

    </LinearLayout>


    <ListView
        android:id="@+id/id_lv_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false" />


</LinearLayout>