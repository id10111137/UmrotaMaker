<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/m_10dp"
    android:orientation="vertical">




        <ImageView
            android:id="@+id/id_icon_bg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/m_30dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_umroh" />

        <TextView
            android:id="@+id/txt_nama_costumer"
            android:layout_marginTop="@dimen/m_20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Full Nama" />

        <EditText
            android:id="@+id/id_namacostumer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Nama"
            android:textColor="@color/colorWhite"
            android:inputType="text" />

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Username" />

        <EditText
            android:id="@+id/id_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:hint="Username"
            android:inputType="text" />

        <TextView
            android:id="@+id/txt_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Password" />

        <EditText
            android:id="@+id/id_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColor="@color/colorWhite"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content"
            android:text="email" />

        <EditText
            android:id="@+id/id_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:hint="email"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/txt_nomor_tlp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="No Telp" />

        <EditText
            android:id="@+id/id_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone no"
            android:textColor="@color/colorWhite"
            android:inputType="phone" />


        <LinearLayout
            android:id="@+id/id_goRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/m_30dp"
            android:background="@drawable/bottom"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Register"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/m_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/m_10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="Already Account ?."
                    android:textSize="@dimen/m_15dp" />

                <TextView
                    android:id="@+id/id_goLogin"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:text=" Login"
                    android:textSize="@dimen/m_15dp"
                    android:textStyle="italic" />


        </LinearLayout>



</LinearLayout>