<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightBlueSlow</item>
        <item name="colorPrimaryDark">@color/colorLightBlou</item>
        <item name="colorAccent">@color/colorSnow</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorLightBlueSlow</item>
        <item name="colorPrimaryDark">@color/colorLightBlou</item>
        <item name="colorAccent">@color/colorSnow</item>
    </style>

    <style name="AppWhite" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorLightBlueSlow</item>
        <item name="colorPrimaryDark">@color/colorLightBlou</item>
        <item name="colorAccent">@color/colorSnow</item>
    </style>

    <style name="Intro" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
